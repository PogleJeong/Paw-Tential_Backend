<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Feed">
<!-- main feed불러오기 -->
  <select id="getAllFeed" resultType="mul.cam.a.feed.dto.FeedDto">
    select *
    from feed
  </select>

  <!--로그인후, 팔로우한 피드까지 불러오기 -->
  <select id="getFollowToUsersFeed" parameterType="String" resultType="mul.cam.a.feed.dto.FeedDto">
    SELECT *
    FROM feed
    WHERE id IN (
      SELECT follow.id
      FROM follow
      WHERE follow.toUser IN (#{toUser}, #{fromUser})
         OR follow.fromUser IN (#{fromUser}, #{toUser})
    )
  </select>
</mapper>
