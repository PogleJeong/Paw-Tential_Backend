<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Follow">
<!-- 모든 follow 불러오기 -->
  <select id="getAllFollowId"  parameterType="String" resultType="mul.cam.a.follow.dto.FollowDto">
    select *
    from follow
  </select>

  <select id="getAllToUsers"  parameterType="String" resultType="mul.cam.a.follow.dto.FollowDto">
    select *
    from follow
    where toUser = #{toUser}
  </select>

  <select id="getBySeq"  parameterType="Inteager" resultType="mul.cam.a.follow.dto.FollowDto">
    select *
    from follow
    where seq = #{seq}
  </select>

  <!-- follow한것만 불러오기? -->
